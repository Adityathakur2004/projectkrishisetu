{
  "name": "krishi-setu",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cross-env PORT=5000 nodemon backend/server.js\" \"cross-env PORT=3000 npm --prefix frontend start\"",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "node backend/server.js",
    "start:frontend": "npm --prefix frontend start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
